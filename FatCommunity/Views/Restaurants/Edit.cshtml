@model FatCommunity.Models.Restaurant
@{
    ViewData["Title"] = "Edit Restaurant";
}

<div class="form-panel">
    <div class="form-header">
        <h1>Edit Restaurant</h1>
        <div class="form-help">Update details and keep it fresh ✨</div>
    </div>

    <form asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id"/>

        <div class="row g-3">
            <div class="col-12 col-lg-7">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label"></label>
                    <input asp-for="Category" class="form-control"/>
                </div>

                <div class="mb-3">
                    <label asp-for="Street" class="form-label"></label>
                    <input asp-for="Street" class="form-control"/>
                </div>

                <div class="mb-3">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control"/>
                </div>

                <div class="mb-3">
                    <label asp-for="PhotoUrl" class="form-label"></label>
                    <input asp-for="PhotoUrl" class="form-control" id="PhotoUrl"/>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                </div>
            </div>

            <div class="col-12 col-lg-5">
                <label class="form-label">Photo preview</label>
                <img class="preview" id="photoPreview" alt="Photo preview"/>
                <div class="form-text mt-2">Preview updates automatically.</div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const input = document.getElementById('PhotoUrl');
            const img = document.getElementById('photoPreview');

            function update() {
                const url = (input.value || '').trim();
                if (!url) {
                    img.classList.remove('show');
                    img.removeAttribute('src');
                    return;
                }
                img.src = url;
                img.classList.add('show');
            }

            input.addEventListener('input', update);
            update();
        })();
    </script>
}
