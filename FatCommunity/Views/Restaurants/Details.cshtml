@model FatCommunity.ViewModels.RestaurantDetailsVm
@{
    ViewData["Title"] = "Restaurant Details";
}

<div class="hero mb-4">
    @if (!string.IsNullOrWhiteSpace(Model.Restaurant.PhotoUrl))
    {
        <img class="hero-photo" src="@Model.Restaurant.PhotoUrl" alt="@Model.Restaurant.Name" />
    }
    else
    {
        <div class="hero-photo"></div>
    }

    <div>
        <h1 class="hero-title">@Model.Restaurant.Name</h1>

        <div class="kicker">
            @Model.Restaurant.Street, @Model.Restaurant.City
        </div>

        <div class="pills">
            @if (!string.IsNullOrWhiteSpace(Model.Restaurant.Category))
            {
                <span class="pill">🍊 <strong>@Model.Restaurant.Category</strong></span>
            }

            <span class="pill">
                ⭐
                @if (Model.ReviewCount == 0)
                {
                    <span class="small-muted">No reviews yet</span>
                }
                else
                {
                    @if (Model.ReviewCount == 0)
                    {
                        <span class="small-muted">No reviews yet</span>
                    }
                    else
                    {
                        <span class="rating-badge">
                            <partial name="_StarRating" model="Model.AvgRating" />
                            <span>@Model.AvgRating.ToString("0.0")</span>
                            <small>(@Model.ReviewCount)</small>
                        </span>
                    }

                    
                }
            </span>
        </div>

        <div class="mt-3 d-flex flex-wrap gap-2">
            <a class="btn btn-primary"
               asp-controller="RestaurantReviews"
               asp-action="Create"
               asp-route-restaurantId="@Model.Restaurant.Id">
                Add Review
            </a>

            <a class="btn btn-outline-primary"
               asp-controller="MenuItems"
               asp-action="Create"
               asp-route-restaurantId="@Model.Restaurant.Id">
                Add Menu Item
            </a>
        </div>
    </div>
</div>

<div class="panel mb-4">
    <h2 class="section-title mb-2">About</h2>

    @if (string.IsNullOrWhiteSpace(Model.Restaurant.Description))
    {
        <p class="desc-text subtle">No description yet.</p>
    }
    else
    {
        <p class="desc-text">@Model.Restaurant.Description</p>
    }
</div>

<div class="d-flex align-items-end justify-content-between flex-wrap gap-2 mb-2">
    <h2 class="section-title m-0">Menu</h2>
</div>

@if (Model.MenuItems.Count == 0)
{
    <div class="panel mb-4">
        <p class="m-0 subtle">No menu items yet.</p>
    </div>
}
else
{
    <div class="menu-grid mb-4">
        @foreach (var item in Model.MenuItems)
        {
            <div class="menu-card">
                <div class="menu-card-body">
                    <div class="menu-card-title">
                        <a class="link-orange"
                           asp-controller="MenuItems"
                           asp-action="Details"
                           asp-route-id="@item.Id">
                            @item.Name
                        </a>
                    </div>

                    <div class="menu-card-sub">
                        @if (!string.IsNullOrWhiteSpace(item.Category))
                        {
                            @item.Category
                        }
                        else
                        {
                            <span class="small-muted">No category</span>
                        }
                    </div>

                    <div class="d-flex justify-content-between align-items-baseline">
                        <div class="price">@item.Price.ToString("C")</div>

                        <div class="small-muted">
                            @if (item.IsAvailable)
                            {
                                <span>Available ✅</span>
                            }
                            else
                            {
                                <span>Unavailable ❌</span>
                            }
                        </div>
                    </div>

                    <div class="mt-2">
                        @if (item.ReviewCount == 0)
                        {
                            <span class="small-muted">No reviews</span>
                        }
                        else
                        {
                            @if (item.ReviewCount == 0)
                            {
                                <span class="small-muted">No reviews</span>
                            }
                            else
                            {
                                <span class="rating-badge">
                                    <partial name="_StarRating" model="item.AvgRating" />
                                    <span>@item.AvgRating.ToString("0.0")</span>
                                    <small>(@item.ReviewCount)</small>
                                </span>
                            }

                            
                        }
                    </div>
                </div>

                <div class="card-actions">
                    <div class="d-flex gap-2">
                        <a class="link-orange"
                           asp-controller="MenuItems"
                           asp-action="Edit"
                           asp-route-id="@item.Id">Edit</a>

                        <span class="small-muted">|</span>

                        <a class="link-orange"
                           asp-controller="MenuItems"
                           asp-action="Delete"
                           asp-route-id="@item.Id">Delete</a>
                    </div>

                    <a class="link-orange"
                       asp-controller="MenuItemReviews"
                       asp-action="Create"
                       asp-route-menuItemId="@item.Id">
                        Add review →
                    </a>
                </div>
            </div>
        }
    </div>
}

<h2 class="section-title">Reviews</h2>

@if (Model.Restaurant.Reviews == null || Model.Restaurant.Reviews.Count == 0)
{
    <div class="panel">
        <p class="m-0 subtle">No reviews yet.</p>
    </div>
}
else
{
    <div class="d-grid gap-3">
        @foreach (var review in Model.Restaurant.Reviews.OrderByDescending(r => r.CreatedAtUtc))
        {
            <div class="review-card">
                <div class="review-head">
                    <div>
                        <div class="review-title">
                            <partial name="_StarRating" model="(double)review.Rating" />
                        </div>
                        <div class="review-meta">
                            by @review.ReviewerName • @review.CreatedAtUtc.ToLocalTime().ToString("g")
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(review.Body))
                {
                    <div class="review-body">@review.Body</div>
                }
            </div>
        }
    </div>
}
