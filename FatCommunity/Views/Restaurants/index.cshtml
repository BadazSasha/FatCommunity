@model FatCommunity.ViewModels.RestaurantsIndexPageVm

@{
    ViewData["Title"] = "Restaurants";
    var i = 0; // for staggered card animation
}

<div class="d-flex align-items-end justify-content-between flex-wrap gap-3 mb-3">
    <div>
        <h1 class="page-title mb-1">Restaurants</h1>
        <div class="subtle">Sort quickly, open filters when needed.</div>
    </div>

    <!-- SORT + FILTERS + ADD -->
    <form method="get" class="d-flex flex-wrap align-items-center gap-2">

        <!-- SORT (separate, always visible) -->
        <div style="min-width: 220px;">
            <label class="form-label mb-1">Sort</label>
            <select class="form-select" name="sort" onchange="this.form.submit()">
                <option value="TopRated" selected="@(Model.SelectedSort == "TopRated")">Top rated</option>
                <option value="MostReviewed" selected="@(Model.SelectedSort == "MostReviewed")">Most reviewed</option>
                <option value="Name" selected="@(Model.SelectedSort == "Name")">Name (A–Z)</option>
                <option value="Newest" selected="@(Model.SelectedSort == "Newest")">Newest</option>
            </select>
        </div>

        <!-- FILTER DROPDOWN -->
        <div class="dropdown" style="margin-top: 24px;">
            <button class="btn btn-outline-primary dropdown-toggle"
                    type="button"
                    data-bs-toggle="dropdown"
                    data-bs-auto-close="outside"
                    aria-expanded="false">
                Filters
            </button>

            <div class="dropdown-menu p-3" style="min-width: 320px;">
                <div class="mb-3">
                    <label class="form-label">Type</label>
                    <select class="form-select" name="category">
                        <option value="">All types</option>
                        @foreach (var c in Model.CategoryOptions)
                        {
                            <option value="@c" selected="@(c == Model.SelectedCategory)">@c</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Minimum stars</label>
                    <select class="form-select" name="minStars">
                        <option value="">Any</option>
                        @for (int s = 5; s >= 1; s--)
                        {
                            <option value="@s" selected="@(Model.SelectedMinStars == s)">@s+ stars</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Minimum reviews</label>
                    <select class="form-select" name="minReviews">
                        <option value="">Any</option>
                        @foreach (var n in new[] { 0, 1, 2, 5, 10, 20 })
                        {
                            <option value="@n" selected="@(Model.SelectedMinReviews == n)">@n+ reviews</option>
                        }
                    </select>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Apply</button>
                    <a asp-action="Index" class="btn btn-outline-primary">Clear</a>
                </div>

                <div class="form-text mt-2">
                    Tip: Sort applies instantly; filters apply when you click “Apply”.
                </div>
            </div>
        </div>

        <!-- ADD -->
        <div style="margin-top: 24px;">
            <a class="btn btn-primary" asp-action="Create">Add Restaurant</a>
        </div>
    </form>
</div>

@if (Model.Restaurants.Count == 0)
{
    <div class="panel">
        <p class="m-0 subtle">No restaurants match your filters.</p>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var r in Model.Restaurants)
        {
            <div class="col-12 col-md-6 col-lg-4 card-animate" style="animation-delay:@(i * 45)ms">
                <a asp-action="Details"
                   asp-route-id="@r.Id"
                   class="card-link"
                   style="text-decoration:none">

                    <div class="menu-card">
                        @if (!string.IsNullOrWhiteSpace(r.PhotoUrl))
                        {
                            <img src="@r.PhotoUrl"
                                 alt="@r.Name"
                                 style="width:100%; height:180px; object-fit:cover; display:block;" />
                        }
                        else
                        {
                            <div style="width:100%; height:180px; background:#f1f5f9;"></div>
                        }

                        <div class="menu-card-body">
                            <div class="d-flex justify-content-between align-items-start gap-2">
                                <div>
                                    <div class="menu-card-title">@r.Name</div>
                                    <div class="small-muted">@r.City</div>
                                </div>

                                @if (!string.IsNullOrWhiteSpace(r.Category))
                                {
                                    <span class="pill"><strong>@r.Category</strong></span>
                                }
                            </div>

                            <div class="mt-3">
                                @if (r.ReviewCount == 0)
                                {
                                    <span class="small-muted">No reviews</span>
                                }
                                else
                                {
                                    <span class="rating-badge">
                                        <partial name="_StarRating" model="r.AvgRating" />
                                        <span>@r.AvgRating.ToString("0.0")</span>
                                        <small>(@r.ReviewCount)</small>
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="card-actions">
                            <span class="small-muted">Click card to open</span>
                            <span class="link-orange">Open →</span>
                        </div>
                    </div>
                </a>
            </div>

            i++;
        }
    </div>
}
